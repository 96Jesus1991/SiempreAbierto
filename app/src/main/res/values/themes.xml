<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema principal oscuro (por defecto para carretera) -->
    <style name="Theme.SiempreAbierto" parent="android:Theme.Material.NoActionBar">
        <!-- Colores principales -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        
        <!-- Fondo oscuro -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        
        <!-- Textos -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- Barra de estado -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        
        <!-- Iconos claros para fondo oscuro -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Tema claro (opcional para modo día) -->
    <style name="Theme.SiempreAbierto.Light" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/text_dark_secondary</item>
        
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Tema para pantalla de Splash -->
    <style name="Theme.SiempreAbierto.Splash" parent="Theme.SiempreAbierto">
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- Estilo para botones grandes (uso en carretera) -->
    <style name="Widget.SiempreAbierto.Button.Large">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <!-- Estilo para botón de emergencia -->
    <style name="Widget.SiempreAbierto.Button.Emergency">
        <item name="android:minHeight">72dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Estilo para textos grandes (legibilidad en carretera) -->
    <style name="TextAppearance.SiempreAbierto.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.SiempreAbierto.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.SiempreAbierto.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.SiempreAbierto.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

</resources>
